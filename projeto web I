document.addEventListener("DOMContentLoaded", () => {
    const hoje = new Date();
    const horas = hoje.getHours();
    const saudacao = document.createElement("p");                                                                                                                         

    if (horas < 12) saudacao.textContent = "Bom dia! Pronto para aprender Matem√°tica?";
    else if (horas < 18) saudacao.textContent = "Boa tarde! Vamos estudar Matem√°tica?";
    else saudacao.textContent = "Boa noite! Continue seus estudos de Matem√°tica!";
                                                                              
    document.body.insertBefore(saudacao, document.body.children[1]);                                                                                          
});          