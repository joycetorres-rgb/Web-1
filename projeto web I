    let mode = 'login';

    function render() {
      const form = document.getElementById('formArea');

      if (mode === 'login') {
        form.innerHTML = `
          <h2>Entrar</h2>

          <div id="msg"></div>

          <label>E-mail</label>
          <input id="loginEmail" type="email" required />
          <div id="loginEmailError" class="error"></div>

          <label style="margin-top: 10px; display:block;">Senha</label>
          <input id="loginPass" type="password" required />
          <div id="loginPassError" class="error"></div>

          <button class="btn-primary" onclick="login()">Entrar</button>
        `;
      } else {
        form.innerHTML = `
          <h2>Cadastro</h2>

          <div id="msg"></div>

